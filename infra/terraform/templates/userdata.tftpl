#cloud-config

repo_update: true
repo_upgrade: all
package_update: true
package_upgrade: true

ssh_pwauth: false

groups:
  - docker

yum_repos:
  docker-ce:
    name: Docker CE
    baseurl: https://download.docker.com/linux/centos/docker-ce.repo
    enabled: true
    gpgcheck: true
    gpgkey: https://download.docker.com/linux/centos/gpg

packages:
  - curl
  - docker-ce
  - docker-ce-cli
  - containerd.io
  - docker-buildx-plugin
  - docker-compose-plugin

system_info:
  default_user:
    groups: [ docker ]



